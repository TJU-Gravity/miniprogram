.goods_container {
  box-shadow:12rpx 12rpx 12rpx gainsboro;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  background-color: #fff;
  padding-bottom: 5px;
  border-radius: 30rpx;
  height: 325rpx;
  width: 678rpx;
}

.goods_auther_data {
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
  margin: 0 0rpx 20rpx 30rpx;
}

.auther_avatar {
  height: 60rpx;
  width: 60rpx;
  margin-top: 20rpx;
}

.auther_mes {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}

.auther_name {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.date {
  color: #999;
  font-size: 12.5rpx;
  margin-top: -30rpx;
}

.telcontainer {
  padding: 10rpx;
  border-radius: 20rpx;
  height: 50rpx;
  vertical-align: middle;
  border: 1px solid red;
  font-size: 32rpx;
  margin-top: 10rpx;
  margin-left: 172rpx;
}

.locate {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.locate_image {
  height: 22rpx;
  width: 22rpx;
  margin-top: 10rpx;
}

.locate_mes {
  font-size: 15rpx;
  color: #b3b3b3;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.goods_image {
  margin-left: 30rpx;
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 15px;
  border-radius: 30rpx;
}

.summary_container {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
}

.goods_mes {
  align-items: center;
  display: flex;
  flex-direction: row;
  font-size: 20rpx;

}

.goods_owner {
  margin-left: 20rpx;
  padding: 3rpx 20rpx 3rpx 20rpx;
  border-radius: 40rpx;
  align-items: center;
  text-align: center;
  color: #fff;
  background-color: #f7931e;
}

.content_container {
  display: flex;
  flex-direction: row;
  margin-top: -20rpx;
}

.goods_content {
  margin-top: 35rpx;
  color: #b3b3b3;
  font-size: 20rpx;
  width: 370rpx;
}

.horizon{
  background-color:  #f7931e;
  height: 0.5px;
  border-radius: 2px;
  width: 365rpx;
  margin-top: 40rpx;
}

.operate{
  font-size: 13rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-left: 160rpx;
  right: 30rpx;
}

.op_view{
  margin-left: 40rpx;
  display: flex;
  flex-direction: row;
  /*垂直居中*/
  align-items: center;
}

.connect{
  width:22rpx;
  height: 22rpx;
}

.share{
  width:22rpx;
  height: 22rpx;
}

.op_text{
  color: #f7931e;
  margin-left: 10rpx;
}

